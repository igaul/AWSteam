{{#g-map
  styles=this.mapStyle
  lat=this.lat
  lng=this.lng
  zoom=this.zoom
  disableDefaultUI=true

  onLoad=(action "onLoad")
as |g|}}
  {{#each @locations as |location|}}
    {{#each location.shapes as |shape|}}
      {{g.polygon
        path=shape
        geodesic=true
        strokeColor=location.density.color
        strokeOpacity=location.activeOutline
        strokeWeight=4
        fillColor=location.density.color
        fillOpacity=0.5
       }}
    {{/each}}
  {{/each}}
{{/g-map}}
<Locations @locations={{this.sortedLocations}} @panTo={{this.panTo}} />
{{yield}}